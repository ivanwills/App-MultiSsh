use strict;
use warnings;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use App::MultiSsh qw/hosts_from_map is_host multi_run shell_quote/;

our $VERSION = '0.13';
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

main();
exit 0;

sub main {
    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'recurse|r=s',
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    ) or pod2usage(2);

    if ( $option{'VERSION'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }
    elsif ( @ARGV >= 2 ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    my $dest = pop @ARGV;
    my (undef, $host_map) = $dest =~ s/^( [^@]+ [@])? ( [^:]+ ) : /$1{host}:/xms;
    my @hosts = hosts_from_map($host_map);
    my @cmd   = qw/scp/;

    push @cmd, qw/-r/ if $option{recurse};

    for my $host (@hosts) {
        my $destination = $dest;
        $destination =~ s/[{] host [}]/$host/xms;
        system @cmd, @ARGV, $destination;
    }

    return;
}

__DATA__

=head1 NAME

mscp - Multi host scp (send files to multiple hosts only)

=head1 VERSION

This documentation refers to mscp version 0.13.

=head1 SYNOPSIS

   mscp [option] src (src2 ...) [user@]host:dest

 OPTIONS:
  src           Source file(s)
  dest          Destination file or directory
  -r --recurse  Recurse into subdirectories

  -v --verbose  Show more detailed option
     --version  Prints the version information
     --help     Prints this help information
     --man      Prints the full documentation for mscp

=head1 DESCRIPTION

The C<mscp> command allows copying files to multiple hosts at once.

